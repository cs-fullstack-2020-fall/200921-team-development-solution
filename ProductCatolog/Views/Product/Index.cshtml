@{
    ViewData["Title"] = "Catalog";
}
@model ProductCatolog.DAO.ProductDbContext
<h1>Product Catalog</h1>
<div class="card-columns">
    @foreach (ProductModel item in @Model.products)
    {
        <div class = "card border-primary">
            <div class="card-body">
                <h5 class="card-title text-primary">@item.productName</h5>
                <p class="card-text">$ @item.price | @item.quantity items</p>
            </div>
        </div>
    }
</div>