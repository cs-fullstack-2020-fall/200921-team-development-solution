@{
    ViewData["Title"] = "Add";
}
@model ProductCatolog.Models.ProductModel
<h1>Add a Product</h1>
@using (@Html.BeginForm("Add", "Product"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.productName, new{@class = "form-control-label"})
        @Html.TextBoxFor(p => p.productName, new{@class = "form-control"}) 
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.price, new{@class = "form-control-label"})
        @Html.TextBoxFor(p => p.price, new{@class = "form-control"})  
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.quantity, new{@class = "form-control-label"})
        @Html.TextBoxFor(p => p.quantity, new{@class = "form-control"})   
    </div>

    <button class = "btn btn-primary" type="submit">Add Product</button>
}